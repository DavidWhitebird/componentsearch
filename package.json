{
  "name": "componentsearchherokubuild",
  "version": "0.0.1",
  "engines": {
    "node": "8.9.4",
    "npm": "6.1.0"
  },
  "cacheDirectories": [
    "client/node_modules",
    "auth_server/node_modules"],
  "dependencies": {
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": " yarn run rootinstallserverdep && yarn run rootstartserver && yarn run startserver",
    "rootinstallserverdep": "cd auth-server/authorization_code && yarn install",
    "rootstartserver": "cd auth-server/authorization_code && node app.js",
    "rootinstallclientdep": "cd client && yarn install",
    "rootbuildclient": "cd client && yarn build",
    "rootstartclient": "cd client && npm start",
    "heroku-prebuild": "cd auth-server && npm install && /auth_server/node authorization_code/app.js",
    "heroku-postbuild": "yarn run rootinstallclientdep && yarn run rootbuildclient && yarn run rootstartclient"
  }
}
